<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nethergrim.combogymdiary"
    android:versionCode="4"
    android:versionName="1.1.2" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Mybarstyle"
        android:windowSoftInputMode="adjustPan" >
        <activity
            android:name="com.nethergrim.combogymdiary.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nethergrim.combogymdiary.SettingsActivity" >
        </activity>
        <activity android:name="com.nethergrim.combogymdiary.StartTrainingActivity" >
        </activity>
        <activity android:name="com.nethergrim.combogymdiary.ExersisesList" >
        </activity>
        <activity
            android:name="com.nethergrim.combogymdiary.AddingExersises"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.nethergrim.combogymdiary.AddingProgram"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.nethergrim.combogymdiary.TrainingAtProgress"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.nethergrim.combogymdiary.HistoryActivity"
            android:parentActivityName="com.nethergrim.combogymdiary.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.combogymdiary.MainActivity" />
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.nethergrim.combogymdiary.HistoryDetailedActivity"
            android:label="@string/title_activity_history_detailed"
            android:parentActivityName="com.nethergrim.combogymdiary.HistoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nethergrim.combogymdiary.HistoryActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
