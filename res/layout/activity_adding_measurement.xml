<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
	android:background="@drawable/cream_pixels_bitmap"
    tools:context=".AddingMeasurementActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5652589022154086/4102541457"
            ads:loadAdOnCreate="true"
            android:gravity="center_horizontal" 
             />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/weight" />

                <EditText
                    android:id="@+id/etMeasureWeight"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:hint="@string/weight"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:ems="10"
                    android:inputType="number" >

                    <requestFocus />
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/tall" />

                <EditText
                    android:id="@+id/etMeasureTall"
                    android:layout_width="0dip"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:hint="@string/tall"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent"
                    android:text="@string/chest" />

                <EditText
                    android:id="@+id/etMeasureChest"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:hint="@string/chest"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent"
                    android:text="@string/waist" />

                <EditText
                    android:id="@+id/etMeasureWaist"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="0dip"
                    android:hint="@string/waist"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent"
                    android:text="@string/hip" />

                <EditText
                    android:id="@+id/etMeasureHip"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:hint="@string/hip"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent"
                    android:text="@string/leg" />

                <EditText
                    android:id="@+id/etMeasureLeg"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:hint="@string/leg"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent"
                    android:text="@string/calf" />

                <EditText
                    android:id="@+id/etMeasureCalf"
                    android:layout_width="0dip"
                    android:hint="@string/calf"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent"
                    android:text="@string/arm" />

                <EditText
                    android:id="@+id/etMeasureArm"
                    android:layout_width="0dip"
                    android:hint="@string/arm"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:alpha="0"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:alpha="0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAddingMeasurementsToDB"
        style="@style/HabraThemeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignParentBottom="true"
        android:text="@string/save" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scrollView1" />

</RelativeLayout>
