<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <Button
        android:id="@+id/btnSave"
        style="@style/HabraThemeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/tglTurnOff"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:text="@string/save_and_rest" />

    <EditText
        android:id="@+id/etTimerValueAtTraining"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/btnSave"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/timer"
        android:inputType="number" />

    <ToggleButton
        android:id="@+id/tglTurnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etTimerValueAtTraining"
        android:layout_alignTop="@+id/etTimerValueAtTraining"
        android:layout_toRightOf="@+id/etTimerValueAtTraining"
        android:textOff="@string/timer"
        android:textOn="@string/timer" />

    <ListView
        android:id="@+id/lvSets"
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:layout_above="@+id/ll2"
        android:layout_alignRight="@+id/btnSave"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded"
        android:keepScreenOn="true" >

    </ListView>

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSave"
        android:layout_alignLeft="@+id/etTimerValueAtTraining"
        android:layout_alignRight="@+id/btnSave"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/tvPrevLeft1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:hint="@string/prev"
            android:textSize="@dimen/dip12" />

        <TextView
            android:id="@+id/tvPrevWeight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:text="@string/Weight"
            android:textSize="@dimen/text14" />

        <EditText
            android:id="@+id/editWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="number"
            android:typeface="normal" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LL1"
        android:layout_alignLeft="@+id/lvSets"
        android:layout_alignRight="@+id/lvSets" >

        <TextView
            android:id="@+id/tvPrevLeft2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:hint="@string/prev"
            android:textSize="@dimen/dip12" />

        <TextView
            android:id="@+id/tvPrevReps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:text="@string/reps"
            android:textSize="@dimen/text14" />

        <EditText
            android:id="@+id/editReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="number"
            android:typeface="normal" >
        </EditText>
    </LinearLayout>

</RelativeLayout>